@model mtt_timer.Models.WebSettings

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/websettings.css" asp-append-version="true" />
<h1>Create</h1>

<h4>WebSettings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Short Name (15 symbols max)</label>
                <input asp-for="Name" class="form-control" size="15" maxlength="15" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prompt" class="control-label"></label>
                <textarea asp-for="Prompt" class="form-control"></textarea>
                <span asp-validation-for="Prompt" class="text-danger"></span>
            </div>
              <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
